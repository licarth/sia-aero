{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "esModuleInterop": true,
    "module": "CommonJS",
    "declaration": true,
    "declarationDir": "build/types",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": true,
    "noEmit": false,
  },
  "include": ["src"]
}
